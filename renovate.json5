{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeAll"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  "rebaseWhen": "conflicted",
  "schedule": ["before 5:30am"],
  "automerge": true,
  "automergeType": "pr",
  "pruneStaleBranches": true,
  "flux": {
    "fileMatch": [
      "kubernetes/.+\\.ya?ml$",
      "bootstrap/.+\\.ya?ml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "kubernetes/.+values\\.ya?ml$",
      "kubernetes/.+\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "kubernetes/.+\\.ya?ml$",
      "bootstrap/.+\\.ya?ml$"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": [
        "k3d-config\\.ya?ml$"
      ],
      "matchStrings": [
        "image: (?<depName>.*?):(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [
        "kubernetes/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "chart: (?<depName>\\S+)\\s+version: [\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "reviewersFromCodeOwners": true
    },
    {
      "matchDatasources": ["helm"],
      "addLabels": ["helm"],
      "commitMessageTopic": "Helm chart {{depName}}"
    },
    {
      "matchDatasources": ["docker"],
      "addLabels": ["docker"],
      "commitMessageTopic": "Docker image {{depName}}"
    },
    {
      "matchManagers": ["flux"],
      "addLabels": ["flux"],
      "commitMessageTopic": "Flux {{depName}}"
    },
    {
      "matchPackagePatterns": ["k3s"],
      "addLabels": ["k3s"],
      "commitMessageTopic": "K3s {{depName}}"
    },
    {
      "matchFileNames": ["mise.toml"],
      "addLabels": ["tools"],
      "commitMessageTopic": "Development tool {{depName}}"
    },
    {
      "description": "Group external-secrets updates",
      "matchPackagePatterns": ["external-secrets"],
      "groupName": "external-secrets"
    },
    {
      "description": "Group Traefik updates",
      "matchPackagePatterns": ["traefik"],
      "groupName": "traefik"
    },
    {
      "description": "Group monitoring stack updates",
      "matchPackagePatterns": ["prometheus", "grafana", "alertmanager"],
      "groupName": "monitoring"
    },
    {
      "description": "Auto-merge patch updates for stable components",
      "matchPackagePatterns": [
        "external-secrets",
        "cert-manager",
        "external-dns"
      ],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "kubernetes/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\s+.+: [\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2
}
